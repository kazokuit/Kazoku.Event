{
    List<Event> events = new List<Event>();
    Event? currentEvent = null;
    bool showModal = false;

    void ModalShow(Event inputEvent)
    {
        currentEvent = inputEvent;
        showModal = true;
    }

    void ModalCancel() => showModal = false;
    async void ModalOk()
    {
        showModal = false;
