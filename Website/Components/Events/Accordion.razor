<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header d-flex justify-content-between" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    @currentEvent.Name
                </button>
            </h2>
            <AuthorizeView>
                <Authorized>
                    <button type="button" class="btn btn-danger float-end" @onclick="DeleteEvent">Ta bort</button>
                </Authorized>
            </AuthorizeView>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <p>
                    @currentEvent.Description
                </p>
                <p>
                    Tid: @currentEvent.Date
                </p>
            </div>
        </div>
    </div>
</div>

@code 
{
    [Parameter]
    public Event currentEvent { get; set; }
    
    [Parameter]
    public EventCallback<Event> onDeleteEvent { get; set; }

    protected async Task DeleteEvent()
    {
        await onDeleteEvent.InvokeAsync(currentEvent);
    }
}